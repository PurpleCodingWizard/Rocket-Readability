{
  "manifest_version": 2,
  "name": "Rocket Readability",
  "description": "This extension uses readability.js to parse out the 'cruft' leaving you with simply the article to read.",
  "version": "0.0.0.1",
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "rocket.png"
  },
  "icons": {
    "16": "rocket.png",
    "48": "rocket.png",
    "128": "rocket.png"
  },
  "web_accessible_resources": ["rocket.png", "close.png"],
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [{
    "matches": [
      "<all_urls>"
    ],
    "js": ["readability.js", "app.js"],
    "css": ["app.css"]
  }]
}
